# ~/.gitconfig
# vi: set noexpandtab tabstop=8:

### PRIVATE SECTION ###
[user]
#	name = Vladimir Savochkin
#	email = savochkin@lavabit.com

### PUBLIC SECTION ###
[core]
	quotepath = false
	sharedRepository = group
[merge]
	log = 32
	renamelimit = 16384
	renormalize = true
[push]
	# There is no "upstream" feature in debian's git 1:1.7.2.5-3
	default = current
[log]
	date = iso
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	b = branch
	ba = branch -a
	bav = branch -av
	bv = branch -v
	ci = commit
	co = checkout
	last = log -1 HEAD
	up = ! git-update
	ru = remote update
	st = status
	unstage = reset HEAD
[filter "sed"]
	clean = sed -f %f.sed
[filter "xsltproc"]
	clean = xsltproc -f %f.xslt
