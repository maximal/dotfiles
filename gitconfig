# /etc/gitconfig
# vi: set noexpandtab tabstop=8:

[core]
	quotepath = false
	sharedRepository = group
[log]
	date = iso
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	b = branch
	ba = branch -a
	bav = branch -av
	ci = commit
	co = checkout
	last = log -1 HEAD
	st = status
	unstage = reset HEAD --

